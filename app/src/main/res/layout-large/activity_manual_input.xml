<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="christophershae.budgettracker.ManualInputActivity">

    <EditText
        android:id="@+id/itemNameView"
        android:layout_width="337dp"
        android:layout_height="44dp"
        android:layout_marginBottom="21dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toTopOf="@+id/categoryListView"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ExpandableListView
        android:layout_width="553dp"
        android:layout_height="64dp"
        android:id="@+id/categoryListView"
        android:layout_marginLeft="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/itemPriceView" />

    <Button
        android:id="@+id/addItemToBudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:text="@string/add"
        app:layout_constraintTop_toBottomOf="@+id/itemsAlreadyAddedToBudget"
        android:layout_marginLeft="169dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/finishAddingItemsToBudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="@string/finish"
        app:layout_constraintTop_toTopOf="@+id/addItemToBudget"
        app:layout_constraintLeft_toRightOf="@+id/addItemToBudget"
        android:layout_marginLeft="82dp" />

    <EditText
        android:id="@+id/itemPriceView"
        android:layout_width="137dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/zero_dollars"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@+id/itemNameView"
        android:layout_marginLeft="81dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <ListView
        android:id="@+id/itemsAlreadyAddedToBudget"
        android:layout_width="557dp"
        android:layout_height="552dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="33dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categoryListView" />
</android.support.constraint.ConstraintLayout>