<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="christophershae.budgettracker.ManualInputActivity">

    <EditText
        android:id="@+id/itemNameView"
        android:layout_width="462dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:textAlignment="textStart"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="11dp"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/addItemToBudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add"
        android:layout_marginLeft="254dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/itemNameView"
        android:layout_marginStart="254dp" />

    <Button
        android:id="@+id/finishAddingItemsToBudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/finish"
        app:layout_constraintTop_toTopOf="@+id/addItemToBudget"
        app:layout_constraintLeft_toRightOf="@+id/addItemToBudget"
        android:layout_marginLeft="82dp"
        android:layout_marginStart="82dp" />

    <EditText
        android:id="@+id/itemPriceView"
        android:layout_width="137dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/zero_dollars"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@+id/itemNameView"
        android:layout_marginLeft="135dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="135dp" />

    <ExpandableListView
        android:id="@+id/categoryListView"
        android:layout_width="732dp"
        android:layout_height="65dp"
        android:layout_marginLeft="34dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="39dp"
        app:layout_constraintTop_toBottomOf="@+id/addItemToBudget"
        android:layout_marginStart="34dp" />

    <ListView
        android:id="@+id/itemsAlreadyAddedToBudget"
        android:layout_width="714dp"
        android:layout_height="764dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="52dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categoryListView"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>